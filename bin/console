<?php

use App\Core\App;
use Symfony\Component\Dotenv\Dotenv;

define('ROOT', dirname(__DIR__));
require ROOT.'/vendor/autoload.php';

(new Dotenv())->load(ROOT.'/.env');

switch($argv[1])
{
    case 'migrate':
        (new App())::$database->applyMigrations();
        break;
    default:
        echo 'Command "'.$argv[1].'" is not defined.';
}
